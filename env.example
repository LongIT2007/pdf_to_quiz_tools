# Server Configuration
NODE_ENV=production
PORT=3000

# Base URL for API (required in production for image URLs)
# Set this to your deployed URL, e.g., https://pdf-to-quiz-tools.onrender.com
BASE_URL=https://pdf-to-quiz-tools.onrender.com
# Alternative: APP_URL=https://pdf-to-quiz-tools.onrender.com

# File Upload Configuration
UPLOAD_DIR=./uploads
MAX_FILE_SIZE=10485760
ALLOWED_MIME_TYPES=application/pdf

# AI Configuration
AI_PROVIDER=openai
OPENAI_API_KEY=your-openai-api-key-here
AI_MODEL=gpt-4o-mini

# Ollama Configuration (optional, if not using OpenAI)
OLLAMA_BASE_URL=http://localhost:11434
OLLAMA_MODEL=llama3.2

# Database Configuration
# For local development: use SQLite
DATABASE_TYPE=sqlite
DATABASE_PATH=./data/quiz.db

# For cloud deployment: use PostgreSQL
# DATABASE_TYPE=postgres
# DATABASE_URL=postgresql://user:password@host:port/database
